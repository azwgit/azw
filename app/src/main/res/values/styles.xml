<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="my_dialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/tranlate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/tranlate_dialog_out</item>
    </style>
    <style name="photo_txt_14sp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12sp</item>
    </style>
    <style name="text_black_huge">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>
    <!-- 自定义的主题的样式 -->
    <style name="CustomTitle" parent="@android:style/Theme.Light">
        　　
        <item name="android:windowTitleSize">@dimen/dp_64</item>   <!-- 标题的高度 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        　　    <!-- 标题栏下往往还有阴影，或者说没有完全填充。此时需要在style里添加一项设置才能去除 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 应用的标题使用的样式，主题 -->
    <style name="CustomWindowTitleBackground">
        <!-- 标题栏的背景色 -->
        　　
        <!--<item name="android:background">#eeeff0</item>-->
        <item name="android:background">@color/white</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/beijing_color"
    android:layout_height="match_parent"
    tools:context=".work.order.activity.NewOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/beijing_color">

        <include layout="@layout/base_header_layout"/>


        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="客户名称"
                android:textColor="@color/text_black"
                android:alpha="0.5"
                android:textSize="@dimen/sp_15"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"/>


            <RelativeLayout
                android:layout_weight="2.5"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <TextView
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxEms="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_toLeftOf="@id/choose_user_tv"
                android:textColor="@color/text_black"
                android:id="@+id/username_tv"
                android:textSize="@dimen/sp_13"
                android:textColorHint="#999999"
                android:hint="请输入客户名称"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/choose_user_tv"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:text="选择客户"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_21"
                    android:background="@drawable/btn_red_4dp_shape"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="联系人"
                android:textColor="@color/text_black"
                android:alpha="0.5"
                android:textSize="@dimen/sp_15"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"/>


                <EditText
                    android:textColor="@color/text_black"
                    android:id="@+id/contactname_et"
                    android:layout_weight="2.5"
                    android:textSize="@dimen/sp_13"
                    android:textColorHint="#999999"
                    android:hint="请输入联系人姓名"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>


        </LinearLayout>
        <View
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:alpha="0.5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#999999"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="联系方式"
                android:textColor="@color/text_black"
                android:alpha="0.5"
                android:textSize="@dimen/sp_15"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"/>


            <EditText
                android:textColor="@color/text_black"
                android:id="@+id/contact_phone_et"
                android:layout_weight="2.5"
                android:textSize="@dimen/sp_13"
                android:textColorHint="#999999"
                android:hint="请输入联系人电话号码"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <View
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:alpha="0.5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#999999"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="送货地址"
                android:textColor="@color/text_black"
                android:alpha="0.5"
                android:textSize="@dimen/sp_15"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"/>


            <EditText
                android:textColor="@color/text_black"
                android:id="@+id/cargo_address_et"
                android:layout_weight="2.5"
                android:textSize="@dimen/sp_13"
                android:textColorHint="#999999"
                android:hint="请输入客户送货地址"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/next_tv"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:background="@drawable/btn_red_shape"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:text="下一步"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
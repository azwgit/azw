<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_above="@+id/ly_bottom"
        android:id="@+id/sc_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                style="@style/apply_layout_pd16_style"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="陈一一提出的差旅报账申请"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="@dimen/dp_16"
                    android:alpha="0.7"
                    android:text="安徽皖垦种业股份有限公司"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_dept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_company"
                    android:layout_marginTop="@dimen/dp_16"
                    android:alpha="0.7"
                    android:text="部门"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_status"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/dtj_tv"
                    android:layout_width="@dimen/dp_57"
                    android:layout_height="@dimen/dp_21"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/audit_dt_shape"
                    android:gravity="center"
                    android:text="待提交"
                    android:textColor="#FEA91D"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible" />
            </RelativeLayout>


        <LinearLayout
            style="@style/apply_layout_pd16_style"
            android:layout_marginTop="@dimen/dp_10">
            <LinearLayout
                android:id="@+id/ly_number"
                style="@style/apply_layout_style">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="审核编号"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:alpha="0.7"
                    android:text="234789237498234"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>
            <LinearLayout
                style="@style/apply_layout_style"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="报销日期"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/tv_stauts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:alpha="0.7"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                style="@style/apply_layout_pd16_style"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="出差事由"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_17" />

                <EditText
                    android:id="@+id/tv_reason"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/apply_pay_account_edit_style" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View style="@style/apply_pay_account_line_style" />
            </LinearLayout>

            <LinearLayout style="@style/apply_layout_pd16_style">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="预借旅费"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_17" />

                <EditText
                    android:id="@+id/tv_money"
                    android:inputType="number"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/apply_pay_account_edit_style"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/info_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:overScrollMode="never"
                android:visibility="visible" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/btn_add_info"
                style="@style/apply_pay_account_layout_style"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center">
                <TextView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_11"
                    android:background="@drawable/btn_red_shape_bg"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加开支项"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <LinearLayout
                style="@style/apply_layout_pd16_style"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="其他费用"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/other_recyclerview"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
            <LinearLayout
                android:id="@+id/ly_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:gravity="center_vertical|right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_35"
                    android:text="报销总额"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_all_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="¥680.00"
                    android:textColor="@color/colorf9"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ly_two"
                style="@style/apply_layout_pd16_style"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="报销总额"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/tv_all_money_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:alpha="0.7"
                    android:text="销售部"
                    android:textColor="@color/colorf9"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>
            <LinearLayout style="@style/apply_layout_pd16_style" android:id="@+id/ly_remark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="报销说明"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/tv_remark"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/apply_pay_account_edit_style"
                    android:maxLength="200"
                    android:minHeight="@dimen/dp_44"
                    android:hint="请填写需要补充的报销说明（非必填）" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_approval"
                style="@style/apply_layout_pd16_style"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:text="审批"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/approval_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:padding="@dimen/dp_16" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_34"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_del"
            style="@style/btn_circle_style"
            android:layout_weight="1"
            android:text="保存" />

        <TextView
            android:id="@+id/btn_submit"
            style="@style/btn_circle_style"
            android:layout_weight="1"
            android:text="保存并提交" />

        <TextView
            android:id="@+id/btn_revoke"
            style="@style/btn_circle_style"
            android:layout_weight="1"
            android:background="@drawable/btn_yellow_shape_bg"
            android:text="撤销"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
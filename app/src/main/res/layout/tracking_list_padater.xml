<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/ll"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="#EFF3F4"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white">

            <TextView
                android:id="@+id/username_tv"
                android:text="00000000"
                android:textSize="@dimen/sp_14"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:background="@drawable/purchase_red_shape"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:id="@+id/status_tv"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_22"
                android:text="待提交"
                android:textColor="@color/colorf9"
                android:textSize="@dimen/sp_12" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#FFF2F5F6"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"/>


        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_84">

            <TextView
                android:id="@+id/tracking_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical"
                android:text="公司名称"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:id="@+id/price_tv"
                android:text="¥10000.00"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorf9"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_toLeftOf="@id/price_tv"
                android:gravity="center_vertical"
                android:text="经费预算 "
                android:textSize="@dimen/sp_14"
                android:textColor="@color/image_overlay_true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#FFF2F5F6"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/white">


            <TextView
                android:layout_marginLeft="@dimen/dp_16"
                android:id="@+id/tiem_tv"
                android:text="活动时间：2020-12-17 11.11"
                android:textSize="@dimen/sp_14"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing_color"
    tools:context=".work.order.activity.Order_GL_Activity">
    <RelativeLayout
        android:layout_above="@+id/tv_add"
        android:layout_width="match_parent"
        android:background="@color/beijing_color"
        android:layout_height="match_parent">

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:backgroundTint="@color/beijing_color"
            android:background="#EFF3F4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/xr"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无数据"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            android:id="@+id/wsj"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_add"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:background="@drawable/btn_red_shape"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:text="新增转商销售"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
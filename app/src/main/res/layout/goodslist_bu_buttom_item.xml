<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_291"
    android:background="@drawable/goods_buut_shape"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_291">

    <RelativeLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@color/white">

        <TextView
            android:id="@+id/pinzhong_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="品种名称"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:layout_toRightOf="@id/pinzhong_tv"
            android:id="@+id/danwei_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="¥1000.0/公斤"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/b"
        android:layout_below="@id/a"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white">

        <TextView
            android:id="@+id/xiao_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="销售量"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"/>

        <EditText
            android:inputType="number"
            android:layout_toRightOf="@id/xiao_tv"
            android:id="@+id/xiaolaing_et"
            android:layout_width="@dimen/dp_96"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:paddingTop="@dimen/dp_10"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"/>


        <TextView
            android:layout_toRightOf="@id/xiaolaing_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="公斤"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/c"
        android:layout_below="@id/b"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white">

        <TextView
            android:id="@+id/shiji_xiao_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="实际售价"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"/>

        <EditText
            android:inputType="number"
            android:id="@+id/shiji_xiaoliang_et"
            android:layout_toRightOf="@id/e"
            android:layout_width="@dimen/dp_96"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:layout_marginLeft="@dimen/dp_30"
            android:id="@+id/e"
            android:layout_toRightOf="@id/shiji_xiao_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="¥"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"/>


        <TextView
            android:layout_toRightOf="@id/shiji_xiaoliang_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="/ 公斤"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">



        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:background="@color/white"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/jia_zonghe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="总额"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:layout_toRightOf="@id/jia_zonghe_tv"
                android:id="@+id/rmb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="¥"
                android:textColor="@color/colorf9"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:layout_toRightOf="@id/rmb_tv"
                android:id="@+id/zonge_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="0.00"
                android:textColor="@color/colorf9"
                android:textSize="@dimen/sp_14"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.05dp"
                android:background="@color/transparent_db"/>


        </RelativeLayout>


        <TextView
            android:background="@color/line_color"
            android:gravity="center"
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:background="@color/colorf9"
            android:gravity="center"
            android:id="@+id/determine_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>


    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

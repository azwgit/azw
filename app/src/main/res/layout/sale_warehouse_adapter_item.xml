<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#FFF2F5F6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:alpha="0.7"
            android:text="111111111111111"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:visibility="visible"
            android:background="@drawable/purchase_red_shape"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:id="@+id/status_tv"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_22"
            android:text="收购中"
            android:textColor="@color/colorf9"
            android:textSize="@dimen/sp_12" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#FFF2F5F6" />

    <TextView
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:id="@+id/ck_name_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_16"
        android:alpha="0.9"
        android:text="2号仓库"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/zi_rv"/>

            <TextView
                android:id="@+id/wsj"
                android:layout_centerInParent="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                android:text="暂无数据"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#FFF2F5F6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/company_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:alpha="0.5"
            android:text="某分公司"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-12-02"
            android:alpha="0.5"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>

</LinearLayout>

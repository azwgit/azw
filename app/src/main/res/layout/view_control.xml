<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="@dimen/dp_169">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">
    <TextView
        android:id="@+id/start_preview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="开始预览" />

    <TextView
        android:id="@+id/stop_preview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="停止预览" android:layout_marginTop="@dimen/dp_10" />

    <TextView
        android:id="@+id/start_spot"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="开始识别" android:layout_marginTop="@dimen/dp_10" />

    <TextView
        android:id="@+id/stop_spot"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="停止识别" android:layout_marginTop="@dimen/dp_10" />

    <TextView
        android:id="@+id/start_spot_showrect"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="开始识别显示扫描框"  android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/stop_spot_hiddenrect"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="暂停识别隐藏扫描框"  android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/show_scan_rect"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="显示扫描框" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/hidden_scan_rect"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="隐藏扫描框" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/decode_scan_box_area"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="仅识别扫描框中的码" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/decode_full_screen_area"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="识别整个屏幕中的码" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/open_flashlight"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="打开闪光灯" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/close_flashlight"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="关闭闪光灯" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/scan_one_dimension"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="仅识别一维条码" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/scan_two_dimension"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="仅识别二维条码" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/scan_qr_code"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="仅识别QRCode" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/scan_code128"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="仅识别Code128" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/scan_ean13"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="仅识别EAN13" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/scan_high_frequency"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="仅识别高频率格式" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/scan_all"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="识别所有码" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/scan_custom"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="自定义识别格式" android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/choose_qrcde_from_gallery"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/WrapWrapTv"
        android:text="识别图片中的码" android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>
</ScrollView>
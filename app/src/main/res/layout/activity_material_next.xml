<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_new_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="部门"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_40"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="生产部"
                android:textColor="@color/color33"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View style="@style/line_style" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="申请人"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_applicant"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_40"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="张天天"
                android:textColor="@color/color33"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            style="@style/apply_pay_account_layout_style"
            android:layout_marginTop="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_3"
                android:text="*"
                android:textColor="@color/colorf9" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="采购原因"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_95"
            android:background="@color/white"
            android:gravity="top"
            android:hint="请输入采购原因"
            android:maxLength="200"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_15"
            android:textColor="#333333"
            android:textColorHint="@color/color_99"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_35"
        android:background="@drawable/btn_red_shape"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
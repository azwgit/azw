<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="发货单号 DD123456789110"
                android:textColor="@color/color33"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_packing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_21"
                android:text="皖垦麦869 125公斤/袋"
                android:textColor="@color/color33"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_money_and_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="单价 ¥ 16.5/公斤  订单数量 7500.00公斤"
                android:textColor="@color/color33"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_shuliang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="退货数量"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/ed_number"
                android:layout_width="@dimen/dp_96"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_shuliang"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="输入数量"
                android:inputType="number"
                android:paddingLeft="@dimen/dp_24"
                android:textColor="@color/color33"
                android:textColorHint="@color/color_66"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/ed_number"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="公斤"
                android:textColor="@color/color33"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_fangshi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="退货方式"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_return_goods_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_fangshi"
                android:background="@color/white"
                android:drawableRight="@mipmap/icon_bottom_jiantou"
                android:drawablePadding="@dimen/dp_26"
                android:gravity="center_vertical"
                android:hint="退回仓库"
                android:paddingLeft="@dimen/dp_24"
                android:textColor="@color/color33"
                android:textColorHint="@color/color33"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/rl_zhuangshang"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:id="@+id/tv_xiaoshoujiage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:text="销售价格"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/ed_money"
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_xiaoshoujiage"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="输入价格"
                    android:paddingLeft="@dimen/dp_24"
                    android:textColor="@color/color33"
                    android:textColorHint="@color/color_66"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="@dimen/dp_90"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/ed_money"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:text="元/公斤"
                    android:textColor="@color/color33"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View style="@style/line_style" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:id="@+id/tv_xiaoshoukehu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:text="销售客户"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_customer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_xiaoshoukehu"
                    android:background="@color/white"
                    android:drawableRight="@drawable/forward"
                    android:drawablePadding="@dimen/dp_26"
                    android:gravity="center_vertical"
                    android:hint="选择客户"
                    android:paddingLeft="@dimen/dp_27"
                    android:paddingRight="@dimen/dp_27"
                    android:textColor="@color/color33"
                    android:textColorHint="@color/color33"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View style="@style/line_style" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:id="@+id/tv_zhuangshangshangpin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:text="转商商品"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_commodity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_zhuangshangshangpin"
                    android:background="@color/white"
                    android:drawableRight="@drawable/forward"
                    android:drawablePadding="@dimen/dp_26"
                    android:gravity="center_vertical"
                    android:hint="选择商品"
                    android:paddingLeft="@dimen/dp_27"
                    android:paddingRight="@dimen/dp_27"
                    android:textColor="@color/color33"
                    android:textColorHint="@color/color33"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/tv_money_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_35"
                android:text="退款金额"
                android:textColor="@color/color33"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_16"
                android:text="¥0.00"
                android:textColor="@color/colorf9"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginBottom="@dimen/dp_34"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_del"
            style="@style/btn_small_angle_new_style"
            android:layout_weight="1"
            android:background="@drawable/btn_gray_shape_bg"
            android:text="删除"
            android:textColor="@color/text_black_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_save"
            style="@style/btn_small_angle_new_style"
            android:layout_weight="1"
            android:background="@drawable/btn_yellow_small_shape_bg"
            android:text="保存"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_submit"
            style="@style/btn_small_angle_new_style"
            android:layout_weight="1"
            android:text="提交" />

    </LinearLayout>
</RelativeLayout>
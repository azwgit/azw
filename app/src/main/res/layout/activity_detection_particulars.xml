<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:fillViewport="true"
    tools:context=".work.detection.DetectionParticularsActivity">

    <include layout="@layout/base_header_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ly_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:fillViewport="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30">

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:alpha="0.9"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="12222222"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_16" />

                    <TextView
                        android:background="@drawable/detection_yes_shape"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:id="@+id/hg_tv"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:text="暂无"
                        android:gravity="center"
                        android:layout_width="@dimen/dp_52"
                        android:layout_height="@dimen/dp_21"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_12"
                android:alpha="0.7"
                android:text="品种信息"
                android:textColor="#17171A"
                android:textSize="@dimen/sp_14" />

            <!--品种-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#0D000000"
                    android:gravity="center"
                    android:text="品种"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_pz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="品种名称"
                    android:textColor="#E617171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <!--分子公司-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#0D000000"
                    android:gravity="center"
                    android:text="分子公司"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="子公司名称"
                    android:textColor="#E617171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <!--仓库/地块-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#0D000000"
                    android:gravity="center"
                    android:text="仓库/地块"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_ck_dk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="仓库/地块名称"
                    android:textColor="#E617171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <!--检测日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#0D000000"
                    android:gravity="center"
                    android:text="检测日期"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="检测日期2020"
                    android:textColor="#E617171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <!--检验员-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#0D000000"
                    android:gravity="center"
                    android:text="检验员"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="某某"
                    android:textColor="#E617171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ly_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_50"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:text="检测信息"
                        android:textColor="#17171A"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_degree_of_completion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:gravity="right"
                        android:text="完成率100%"
                        android:textColor="#17171A"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerView"/>


            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
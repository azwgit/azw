<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="客户名称"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_24"
                android:text="北京市"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View style="@style/line_style" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="经销区域"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_distribution_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_24"
                android:text="选择行政区域"
                android:textColor="#999999"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="联系人"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/tv_contacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_24"
                android:text="北京市"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View style="@style/line_style" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="联系方式"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/tv_contact_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_24"
                android:text="北京市"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View style="@style/line_style" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="联系地址"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/tv_contact_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_24"
                android:text="北京市"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <View style="@style/line_style" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="备注"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/tv_remarks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_24"
                android:text="北京市"
                android:textColor="#333333"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="营业执照号"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/tv_license_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_24"
                android:text="请输入营业执照证件号"
                android:textColor="#999999"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|center"
                android:text="营业执照"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pic_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_24" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_35"
        android:background="@drawable/btn_red_shape"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
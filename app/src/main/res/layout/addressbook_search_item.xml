<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">


        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:scaleType="centerCrop"
            android:src="@drawable/mask_group" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@id/img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/child_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无"
                android:textColor="#130c0e"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/child_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/child_text"
                android:layout_marginTop="@dimen/dp_4"
                android:alpha="0.5"
                android:text="大堂经理"
                android:textColor="#17171A"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/child_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/child_text"
                android:layout_marginTop="@dimen/dp_4"
                android:alpha="0.5"
                android:text="总公司-财务部"
                android:textColor="#17171A"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


        <ImageView
            android:id="@+id/phone_img"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:scaleType="centerCrop"
            android:src="@drawable/phone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_58"
            android:alpha="0.05"
            android:background="#17171A" />
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#FFF2F5F6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:alpha="0.7"
            android:text="订单号: 111111111111111"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:background="@drawable/audit_dt_shape"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/status_tv"
            android:layout_marginRight="@dimen/dp_16"
            android:id="@+id/ckfl_tv"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_22"
            android:text="1号仓库"
            android:textColor="#FEA91D"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:background="@drawable/purchase_red_shape"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:id="@+id/status_tv"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_22"
            android:text="收购中"
            android:textColor="@color/colorf9"
            android:textSize="@dimen/sp_12" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#FFF2F5F6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zi_rv"/>

        <TextView
            android:id="@+id/wsj"
            android:layout_centerInParent="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            android:text="暂无数据"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#FFF2F5F6" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36">

        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:id="@+id/fen_compay_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:alpha="0.5"
            android:text="分子公司名称"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_8"
            android:alpha="0.5"
            android:text="业务员：莫某"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36">

        <TextView
            android:id="@+id/xia_code_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:alpha="0.5"
            android:text="下单时间：2020-12-9"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:id="@+id/fa_huo_code_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发货时间：2020-12-12"
            android:alpha="0.5"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>

</LinearLayout>

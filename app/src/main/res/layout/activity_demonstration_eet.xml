<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/beijing_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".work.modelfield.activity.DemonstrationEetActivity">

    <include layout="@layout/base_header_layout"
        android:id="@+id/head"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/beijing_color">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_118"
                android:background="@color/white"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/pz_nd_tv"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="皖垦麦869 品种示范 2020年"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"/>


                <TextView
                    android:id="@+id/address_tv"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="安徽省合肥市长丰县"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"/>

                <TextView
                    android:id="@+id/compay_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="示范单位：皖垦种业股份有限公司"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

            <TextView
                android:layout_marginBottom="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="示范信息"
                android:textColor="#666666"
                android:textSize="@dimen/sp_16"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"/>


            <LinearLayout
                android:layout_marginBottom="@dimen/dp_150"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <EditText
                    android:background="@null"
                    android:maxLength="100"
                    android:id="@+id/titles_tv"
                    android:lineSpacingExtra="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#333333"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColorHint="#4F5051"
                    android:hint="请输入标题"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:id="@+id/pic_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_35"
        android:background="@drawable/btn_red_shape"
        android:gravity="center"
        android:text="确认添加"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>
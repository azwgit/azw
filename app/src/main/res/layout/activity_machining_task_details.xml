<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:fillViewport="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ly_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:fillViewport="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:alpha="0.9"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="计划单号  12222222"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_processing_type"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_19"
                        android:background="@drawable/btn_border_blue_shape"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:text="接单加工"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_19"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/btn_border_red_shape"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:text="采购入库"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_12"
                android:alpha="0.7"
                android:text="品种信息"
                android:textColor="#17171A"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#0D000000"
                    android:gravity="center"
                    android:text="分子公司"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_subsidiary_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="子公司名称"
                    android:textColor="#E617171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#0D000000"
                    android:gravity="center"
                    android:text="品种包装"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_packing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="8号仓库"
                    android:textColor="#E617171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#0D000000"
                    android:gravity="center"
                    android:text="计划量"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_planned_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="皖垦麦869"
                    android:textColor="#E617171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#0D000000"
                    android:gravity="center"
                    android:text="计划完成日期"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="1880.00 公斤"
                    android:textColor="#E617171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_task"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:alpha="0.7"
                    android:text="任务确认"
                    android:textColor="#17171A"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginTop="@dimen/dp_1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#0D000000"
                        android:gravity="center"
                        android:text="任务接接受人"
                        android:textColor="#17171A"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_receiver"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_20"
                        android:text="2号仓库"
                        android:textColor="#E617171A"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginTop="@dimen/dp_1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#0D000000"
                        android:gravity="center"
                        android:text="接受日期"
                        android:textColor="#17171A"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_accept_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_20"
                        android:text="8号仓库库存不足，补充备用"
                        android:textColor="#E617171A"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ly_operation_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:layout_marginTop="@dimen/dp_1">

                        <TextView
                            android:id="@+id/tv_operator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#0D000000"
                            android:gravity="center"
                            android:text="操作人"
                            android:textColor="#17171A"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_transfer_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_20"
                            android:text="8号仓库库存不足，补充备用"
                            android:textColor="#E617171A"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:layout_marginTop="@dimen/dp_1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#0D000000"
                            android:gravity="center"
                            android:text="完成日期"
                            android:textColor="#17171A"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_completion_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_20"
                            android:text="8号仓库库存不足，补充备用"
                            android:textColor="#E617171A"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_56"
                        android:layout_marginTop="@dimen/dp_1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="#0D000000"
                            android:gravity="center"
                            android:text="实际加工量"
                            android:textColor="#17171A"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_processing_capacity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_20"
                            android:text="8号仓库库存不足，补充备用"
                            android:textColor="#E617171A"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:text="加工记录"
                        android:textColor="#17171A"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_degree_of_completion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:layout_weight="1"
                        android:alpha="0.7"
                        android:gravity="right"
                        android:text="完成率100%"
                        android:textColor="#17171A"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="#0D000000"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="时间"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="数量（公斤）"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="入库单号"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_del"
            style="@style/btn_small_angle_new_style"
            android:layout_weight="1"
            android:text="任务终止" />

        <TextView
            android:id="@+id/btn_submit"
            style="@style/btn_small_angle_new_style"
            android:layout_weight="1"
            android:text="加工上报" />

        <TextView
            android:id="@+id/btn_ok"
            style="@style/btn_small_angle_new_style"
            android:layout_weight="1"
            android:text="接受确认"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>

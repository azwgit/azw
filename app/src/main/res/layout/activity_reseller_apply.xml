<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing_color"
    android:orientation="vertical"
    tools:context=".work.reseller.activity.ResellerApplyActivity">

    <include layout="@layout/base_header_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_marginBottom="@dimen/dp_90"
            android:background="@color/beijing_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/xr"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无数据"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/wsju"/>

        <TextView
            android:id="@+id/apply_reseller_tv"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/btn_red_4dp_shape"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="申请转商调拨"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:textSize="@dimen/sp_16"/>

    </RelativeLayout>


</LinearLayout>
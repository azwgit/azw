<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/beijing_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/base_header_layout"
        android:id="@+id/head"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_above="@id/ly_bottom"
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/apply_layout_pd16_style"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="转商调拨：00000000000"
                    android:textColor="@color/color33"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="暂无"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_company">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="暂无"
                        android:textColor="@color/color_99"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="0000-00-00"
                        android:textColor="@color/color_99"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_stuats"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_height="@dimen/dp_21"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/purchase_red_shape"
                    android:gravity="center"
                    android:text="待审批"
                    android:textColor="@color/colorf9"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:text="审批编号"
                    android:textColor="@color/color_99"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/shenpi_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:text="000000000"
                    android:textColor="@color/text_black"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"/>

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/bar_grey"
                android:alpha="0.1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_72"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:text="审批状态"
                    android:textColor="@color/color_99"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"/>

                <TextView
                    android:id="@+id/shenpi_stats"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:text="暂无"
                    android:textColor="@color/text_black"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"/>

            </LinearLayout>

            <RelativeLayout
                style="@style/apply_layout_pd16_style"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ly_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_transfer_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="暂无"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_calendar" />
                    <TextView
                        android:id="@+id/tv_transfer_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="暂无"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_below="@+id/ly_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_out_order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出库单：0"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />


                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_out_order_tiem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000-00-00"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_int_order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入库单：0"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />


                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_int_order_tiem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000-00-00"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_12" />


                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                style="@style/apply_layout_pd16_style"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转商商品"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_14" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/apply_layout_pd16_style"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调拨原因"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="right"
                    android:text="暂无"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_approval"
                style="@style/apply_layout_pd16_style"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_18"
                    android:text="审批"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/approval_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_del"
            style="@style/btn_small_angle_grey_new_style"
            android:layout_weight="1"
            android:text="删除" />
        <TextView
            android:id="@+id/btn_ok"
            style="@style/btn_small_angle_new_style"
            android:layout_weight="1"
            android:text="重新申请"
            />
    </LinearLayout>

</RelativeLayout>
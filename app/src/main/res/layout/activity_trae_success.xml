<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_ma"
        android:src="@mipmap/icon_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_180"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"/>
    <TextView
        android:id="@+id/tv_success"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/img_ma"
        android:text="提交成功!"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_below="@+id/tv_success"
        android:text="请打印收购单据"
        android:alpha="0.7"
        android:textColor="#17171A"
        android:textSize="@dimen/sp_14"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_printing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_35"
        android:background="@drawable/btn_red_shape"
        android:gravity="center"
        android:text="打印收购小票"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            style="@style/apply_pay_account_layout_style"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_3"
                android:text="*"
                android:textColor="@color/colorf9" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="调拨原因"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_95"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white"
            android:gravity="top"
            android:hint="请输入调拨原因"
            android:maxLength="200"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_15"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_12"
                android:alpha="0.7"
                android:text="调出"
                android:textColor="#17171A"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="分子公司"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_transfer_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_40"
                    android:text="分子公司1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View style="@style/line_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="调出仓库"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_transfer_out_warehouse"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:alpha="0.3"
                    android:background="@color/white"
                    android:drawableRight="@mipmap/icon_bottom_jiantou"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_40"
                    android:text="选择仓库"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_12"
                android:alpha="0.7"
                android:text="调入"
                android:textColor="#17171A"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="分子公司"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_40"
                    android:text="分子公司1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View style="@style/line_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="调入仓库"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_transfer_warehouse"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:alpha="0.3"
                    android:background="@color/white"
                    android:drawableRight="@mipmap/icon_bottom_jiantou"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_40"
                    android:text="选择仓库"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_35"
        android:background="@drawable/btn_red_shape"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
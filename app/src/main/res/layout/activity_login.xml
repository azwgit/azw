<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bq.edmp.activity.login.LoginActivity">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="130px"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_74"
        android:orientation="horizontal">

        <!-- 验证码登录 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/code_tv"
                android:layout_width="@dimen/dp_94"
                android:layout_height="@dimen/dp_23"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="验证码登录"
                android:textColor="#17171A"
                android:textSize="@dimen/sp_18" />

            <View
                android:id="@+id/code_v"
                android:layout_width="@dimen/dp_94"
                android:layout_height="@dimen/dp_4"
                android:layout_below="@id/code_tv"
                android:layout_marginTop="@dimen/dp_9"
                android:background="#F91515" />

        </RelativeLayout>
        <!-- 密码登录 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_33">

            <TextView
                android:id="@+id/password_tv"
                android:layout_width="@dimen/dp_94"
                android:layout_height="@dimen/dp_23"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:alpha="0.5"
                android:gravity="center"
                android:text="密码登录"
                android:textColor="#17171A"
                android:textSize="@dimen/sp_18" />

            <View
                android:id="@+id/password_v"
                android:layout_width="@dimen/dp_94"
                android:layout_height="@dimen/dp_4"
                android:layout_below="@id/password_tv"
                android:layout_marginTop="@dimen/dp_9"
                android:background="#F91515" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone_ll"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/ll"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_60"
        android:orientation="horizontal">
        <!-- +86 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="+86"
            android:textColor="#17171A"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="#999999" />

        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@null"
            android:hint="请输入手机号"
            android:maxLength="15"
            android:padding="@dimen/dp_5"
            android:text="12346963651"
            android:textColor="#17171A"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:id="@+id/phone_v"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/phone_ll"
        android:layout_marginLeft="@dimen/dp_32"
        android:alpha="0.05"
        android:background="#000000" />


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_v">

        <LinearLayout
            android:id="@+id/auth_ll"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            android:visibility="visible">

            <EditText
                android:id="@+id/authcode_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入验证码"
                android:paddingBottom="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:textColor="#17171A"
                android:textSize="@dimen/sp_14" />

            <!-- 获取验证码 -->
            <TextView
                android:id="@+id/gain_authcode_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"
                android:text="获取验证码"
                android:textColor="#F91515"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_ll"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@null"
                android:hint="请输入密码"
                android:paddingBottom="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:text="1234"
                android:textColor="#17171A"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line_2"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/rl"
        android:layout_marginLeft="@dimen/dp_32"
        android:alpha="0.05"
        android:background="#000000" />

    <ImageView
        android:id="@+id/login_btn_img"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@id/line_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:src="@drawable/loginbtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_24"
        android:alpha="0.5"
        android:text="北京爱种网络科技有限公司技术支持"
        android:textColor="#17171A"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#EFF3F4"
    android:id="@+id/ll"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="#EFF3F4"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@color/white">

                <TextView
                    android:id="@+id/danhao_tv"
                    android:text="00000000"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#999999"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:background="@drawable/purchase_red_shape"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:id="@+id/status_tv"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_22"
                    android:text="待提交"
                    android:textColor="@color/colorf9"
                    android:textSize="@dimen/sp_12" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#FFF2F5F6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/imgs"
                    android:id="@+id/chu_gongsi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转出公司"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_16"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"/>



                <ImageView
                    android:id="@+id/imgs"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/vector_r"/>

                <TextView
                    android:layout_toRightOf="@id/imgs"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ru_gongsi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转入公司"
                    android:textColor="#333333"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_16"
                    android:gravity="right" />


            </RelativeLayout>


            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv"
                    android:background="@color/white"/>

                <TextView
                    android:background="@color/white"
                    android:gravity="center"
                    android:id="@+id/wsj"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_14"
                    android:text="暂无数据"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#FFF2F5F6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white">

                <TextView
                    android:id="@+id/allocation_fen_tv"
                    android:text="转商调拨"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_black"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tiem_tv"
                    android:text="2020-12-17 11.11"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginRight="@dimen/dp_16"
                    android:textColor="#999999"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_toLeftOf="@id/tiem_tv"
                    android:id="@+id/user_tv"
                    android:text="某某"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="#999999"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:id="@+id/img"
                    android:layout_marginRight="2dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/user_tv"
                    android:src="@drawable/icon_universals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



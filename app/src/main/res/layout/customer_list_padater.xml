<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/beijing_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_126">

        <CheckBox
            android:layout_centerInParent="true"
            android:id="@+id/select"
            style="@style/CustomCheckBoxTheme"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:gravity="center" />

    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_126"
    android:orientation="vertical">

    <TextView
        android:paddingTop="@dimen/dp_10"
        android:id="@+id/comay_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:text="公司名称"
        android:textSize="@dimen/sp_14"
        android:gravity="center_vertical"
        android:textColor="@color/text_black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="@dimen/sp_12"
            android:gravity="center_vertical"
            android:alpha="0.7"
            android:textColor="@color/text_black"/>

        <TextView
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/user_tv"
            android:layout_centerVertical="true"
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15800000000"
            android:textSize="@dimen/sp_12"
            android:gravity="center_vertical"
            android:alpha="0.7"
            android:textColor="@color/text_black"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx县"
            android:textSize="@dimen/sp_12"
            android:gravity="center_vertical"
            android:alpha="0.7"
            android:textColor="@color/text_black"/>




    </RelativeLayout>

    <View
        android:layout_marginRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_black"
        android:alpha="0.2"/>

    <TextView
        android:alpha="0.7"
        android:textSize="@dimen/sp_12"
        android:id="@+id/userzhiwei_tv"
        android:text="销售经理-张萌萌"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/text_black"/>

</LinearLayout>
    </LinearLayout>

</LinearLayout>

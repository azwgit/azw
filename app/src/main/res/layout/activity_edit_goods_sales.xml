<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_new_color"
    tools:context=".work.order.activity.ModifyOrderActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_above="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/beijing_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16"
                android:text="订单号：0000000000"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="客户名称"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_16" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <TextView
                        android:layout_marginLeft="@dimen/dp_24"
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/choose_user_tv"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="请输入客户名称"
                        android:maxEms="1"
                        android:singleLine="true"
                        android:textColor="@color/color33"
                        android:textColorHint="@color/color_99"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/choose_user_tv"
                        android:layout_width="@dimen/dp_64"
                        android:layout_height="@dimen/dp_21"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:background="@drawable/btn_red_4dp_shape"
                        android:gravity="center"
                        android:text="选择客户"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="联系人"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/et_contactname"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入联系人姓名"
                    android:textColor="@color/color33"
                    android:textColorHint="@color/color_99"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View style="@style/line_style" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="联系方式"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/et_phone"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:background="@null"
                    android:hint="请输入联系人电话号码"
                    android:textColor="@color/color33"
                    android:textColorHint="@color/color_99"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View style="@style/line_style" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="送货地址"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/et_address"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:background="@null"
                    android:hint="请输入客户送货地址"
                    android:textColor="@color/color33"
                    android:textColorHint="@color/color_99"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View style="@style/line_style" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="销售区域"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/tv_distribution_area"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:background="@null"
                    android:hint="请选择销售区域"
                    android:textColor="@color/color33"
                    android:textColorHint="@color/color_99"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="分子公司"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/tv_subsidiary_company"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="分子公司"
                    android:textColor="@color/color33"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View style="@style/line_style" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_96"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:text="商品仓库"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/tv_warehouse"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="选择仓库"
                    android:textColor="@color/color33"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/add_goods_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_88"
                android:background="@drawable/btn_white_shape">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/add_red"
                    android:text="  添加商品"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16" />


            </RelativeLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete_tv"
            style="@style/btn_small_angle_new_style"
            android:layout_weight="1"
            android:background="@drawable/btn_gray_shape_bg"
            android:text="删除"
            android:textColor="@color/text_black_gray" />

        <TextView
            android:id="@+id/save_tv"
            style="@style/btn_small_angle_new_style"
            android:layout_weight="1"
            android:background="@drawable/btn_yellow_small_shape_bg"
            android:text="保存"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/save_add_tv"
            style="@style/btn_small_angle_new_style"
            android:layout_weight="1"
            android:text="保存并提交" />

    </LinearLayout>


</RelativeLayout>
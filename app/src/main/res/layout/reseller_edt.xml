<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">



   <LinearLayout
       android:layout_width="match_parent"
      android:background="@color/white"
       android:layout_height="wrap_content"
      android:orientation="vertical">

      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_5"
         android:background="@color/beijing_color"/>

      <RelativeLayout
          android:layout_marginTop="@dimen/dp_20"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_40"
          android:background="@color/white">

         <TextView
             android:id="@+id/user_name_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="转商商品"
             android:textColor="#666666"
             android:layout_centerVertical="true"
             android:textSize="@dimen/sp_16"
             android:gravity="center_vertical"
             android:layout_marginLeft="@dimen/dp_16"/>


         <ImageView
             android:id="@+id/delet_img"
             android:layout_marginRight="@dimen/dp_15"
             android:layout_toLeftOf="@id/edit_img"
             android:layout_centerVertical="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/icon_delete"/>


         <ImageView
             android:layout_marginRight="@dimen/dp_16"
             android:id="@+id/edit_img"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@mipmap/icon_edit"/>

      </RelativeLayout>

      <TextView
          android:id="@+id/umber_tv"
          android:layout_marginTop="@dimen/dp_12"
          android:layout_marginLeft="@dimen/dp_16"
          android:layout_marginRight="@dimen/dp_16"
          android:textSize="@dimen/sp_16"
          android:textColor="#333333"
          android:text="数量  0.00公斤"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_40"/>


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_40"
          android:background="@color/white">

         <TextView
             android:id="@+id/zhuanchu_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="转出"
             android:textColor="#333333"
             android:layout_centerVertical="true"
             android:textSize="@dimen/sp_16"
             android:gravity="center_vertical"
             android:layout_marginLeft="@dimen/dp_16"/>

         <ImageView
             android:id="@+id/img"
             android:layout_width="@dimen/dp_6"
             android:layout_height="@dimen/dp_18"
             android:layout_centerVertical="true"
             android:layout_centerHorizontal="true"
             android:src="@drawable/vector_r"/>

         <TextView
             android:layout_alignParentRight="true"
             android:layout_marginRight="@dimen/dp_16"
             android:id="@+id/zhuanru_tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="转入"
             android:textColor="#333333"
             android:layout_centerVertical="true"
             android:textSize="@dimen/sp_16"
             android:gravity="center_vertical"
             android:layout_marginLeft="@dimen/dp_16"/>

      </RelativeLayout>


   </LinearLayout>

</RelativeLayout>

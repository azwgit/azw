<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5F6"
    tools:context=".work.reseller.activity.ApplyResellerAllocationTwoActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/base_header_layout" />


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="#F4F1F1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#F60404"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 调拨原因"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/bar_grey"
                            android:layout_gravity="center_vertical"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/bar_grey"
                        android:alpha="0.1"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <TextView
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/text_black"
                            android:paddingTop="@dimen/dp_5"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:background="@color/white"
                            android:hint="请输入调拨原因"
                            android:textColorHint="#717277"
                            android:id="@+id/reason_tv"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:text="调出仓库"
                        android:textColor="#919295"
                        android:gravity="bottom"
                        android:textSize="@dimen/sp_16"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_6"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_89"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_44"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分子公司"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:textSize="@dimen/sp_16"
                                android:textColor="#59595A"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/allcation_chu_compy_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_30"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:text="选择公司"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_16" />

                        </LinearLayout>

                        <View
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/bar_grey"
                            android:alpha="0.1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_44"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="调出仓库"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:textSize="@dimen/sp_16"
                                android:textColor="#59595A"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/allcation_chu_ku_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="选择仓库"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_30"
                                android:textSize="@dimen/sp_16"
                                android:textColor="#333333"
                                android:layout_gravity="center_vertical"/>


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:text="调入商品粮仓"
                        android:textColor="#919295"
                        android:gravity="bottom"
                        android:textSize="@dimen/sp_16"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_6"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_89"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_44"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分子公司"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:textSize="@dimen/sp_16"
                                android:textColor="#59595A"
                                android:layout_gravity="center_vertical"/>


                            <TextView
                                android:id="@+id/allcation_ru_compy_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_30"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:text="选择公司"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_16" />

                        </LinearLayout>

                        <View
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginRight="@dimen/dp_16"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/bar_grey"
                            android:alpha="0.1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_44"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:text="调入仓库"
                                android:textColor="#59595A"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:id="@+id/allcation_ru_ku_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_30"
                                android:gravity="center_vertical"
                                android:text="选择仓库"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_16" />


                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/my_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/beijing_color"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone" />


                    <RelativeLayout
                        android:layout_marginBottom="@dimen/dp_88"
                        android:id="@+id/add_goods_rl"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginRight="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:background="@drawable/btn_white_8dp_shape">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp_14"
                            android:text="  添加调拨商品"
                            android:drawableLeft="@drawable/add_red"
                            android:layout_centerInParent="true"/>


                    </RelativeLayout>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_del"
                style="@style/btn_small_angle_grey_new_style"
                android:layout_weight="1"
                android:text="删除" />
            <TextView
                android:id="@+id/tv_submit"
                style="@style/btn_small_angle_new_style"
                android:layout_weight="1"
                android:text="确定" />
        </LinearLayout>
</RelativeLayout>
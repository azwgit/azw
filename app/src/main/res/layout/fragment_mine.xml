<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.bq.edmp.fragment.MineFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/top_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/mine_top"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="@dimen/dp_350"
            android:layout_height="@dimen/dp_193"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_68">


            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:layout_alignParentBottom="true"
                android:background="@drawable/mine_re_shape"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="@dimen/dp_215"
                    android:layout_height="@dimen/dp_32"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_8">

                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="----"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:id="@+id/user_identity_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_toRightOf="@id/user_name_tv"
                        android:text="----"
                        android:textColor="#1A76FF"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/edit_tv"
                        android:layout_width="@dimen/dp_33"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_16"
                        android:alpha="0.7"
                        android:background="@drawable/mine_edit_shape"
                        android:gravity="center"
                        android:text="编辑"
                        android:textColor="#17171A"
                        android:textSize="@dimen/sp_10" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="@dimen/dp_215"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_4"
                    android:alpha="0.5"
                    android:gravity="center_vertical"
                    android:maxLength="11"
                    android:text="------------"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <ImageView
                android:id="@+id/mine_head_img"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_88"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/mine_head_shape" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_bott"
            android:layout_width="@dimen/dp_350"
            android:layout_height="@dimen/dp_73"
            android:layout_below="@id/rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20">

            <!--工作报表-->
            <LinearLayout
                android:id="@+id/mine_bb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/mine_bb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="工作报表"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
            <!--周报-->
            <LinearLayout
                android:id="@+id/mine_zb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/features_mine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="周报"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
            <!--客户拜访-->
            <LinearLayout
                android:id="@+id/mine_bf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/khgl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="客户拜访"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
            <!--市场情报-->
            <LinearLayout
                android:id="@+id/mine_qb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/features" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="市场情报"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>


        <!--关于我们-->
        <RelativeLayout
            android:id="@+id/gy_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_below="@id/ll_bott"
            android:layout_marginTop="@dimen/dp_24">

            <ImageView
                android:id="@+id/gy_img"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@drawable/aboutus" />

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@drawable/forward" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/gy_img"
                android:text="关于我们"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:alpha="0.05"
                android:background="#000000" />


        </RelativeLayout>

        <!--登录管理-->
        <RelativeLayout
            android:id="@+id/dl_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_below="@id/gy_rl">

            <ImageView
                android:id="@+id/dl_img"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@drawable/login" />

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@drawable/forward" />

            <TextView
                android:id="@+id/dlgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@id/dl_img"
                android:text="登录管理"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/dlgl"
                android:alpha="0.5"
                android:text="（密码、手势、刷脸等）"
                android:textColor="#17171A"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:alpha="0.05"
                android:background="#000000" />
        </RelativeLayout>

        <!--退出登录-->
        <ImageView
            android:id="@+id/mine_login_out_img"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_44"
            android:layout_below="@id/dl_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_139"
            android:layout_marginTop="@dimen/dp_68"
            android:src="@drawable/login_out" />

        <LinearLayout
            android:layout_width="@dimen/dp_350"
            android:layout_height="@dimen/dp_73"
            android:layout_above="@+id/ll_bott"
            android:layout_alignLeft="@+id/rl"
            android:layout_alignStart="@+id/rl"
            android:layout_marginBottom="@dimen/dp_15">

            <!--工作日程-->
            <LinearLayout
                android:id="@+id/mine_gzrc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/gzrc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="工作日程"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
            <!--待办事项-->
            <LinearLayout
                android:id="@+id/mine_dbsx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/dbsx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="待办事项"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
            <!--日常申请-->
            <LinearLayout
                android:id="@+id/mine_rcsq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/rcsq_mine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="日常申请"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
            <!--文档下载-->
            <LinearLayout
                android:id="@+id/mine_wdxz"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/wdxz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="文档下载"
                    android:textColor="#17171A"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/dp_104"
            android:layout_height="@dimen/dp_78"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/property_1daitijiao" />


        <TextView
            android:id="@+id/titles"
            android:layout_width="@dimen/dp_223"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:alpha="0.9"
            android:maxLines="2"
            android:text="皖垦种业召开晚粳水稻新品种观摩暨优质水稻订单论坛会"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="@dimen/dp_223"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_16"
                android:alpha="0.5"
                android:text="2020-12-12"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/liulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/titles"
                android:layout_marginBottom="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_toRightOf="@id/time"
                android:alpha="0.5"
                android:text="浏览次数：422"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_d0d0d0" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".word.inventory.InventoryActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/base_header_layout"
            android:id="@+id/a"/>

        <LinearLayout
            android:layout_below="@id/a"
            android:id="@+id/top_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_44"
              android:background="@color/white">


              <android.support.design.widget.TabLayout
                  android:id="@+id/layout_tab"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_44"
                  android:layout_toLeftOf="@id/screen_img"
                  android:background="@color/white"
                  app:tabIndicatorColor="#F91515"
                  app:tabIndicatorHeight="@dimen/dp_3"
                  app:tabMode="fixed"
                  app:tabSelectedTextColor="@color/black"
                  app:tabTextColor="@color/text_gray" />


              <ImageView
                  android:id="@+id/screen_img"
                  android:layout_width="@dimen/dp_24"
                  android:layout_height="@dimen/dp_24"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_margin="@dimen/dp_10"
                  android:background="@color/white"
                  android:src="@drawable/icon_universal" />


          </RelativeLayout>
          <android.support.v4.view.ViewPager
              android:id="@+id/view_pager"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff" />
        </LinearLayout>

   <com.jcodecraeer.xrecyclerview.XRecyclerView
       android:background="@color/color_f2"
       android:visibility="gone"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/xr"
       android:layout_below="@id/a"/>
    </RelativeLayout>

    <!--策划  筛选-->
    <RelativeLayout
        android:id="@+id/linter_history"
        android:layout_width="@dimen/dp_330"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/cz_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.5"
                android:background="#F2F5F6"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/affirm_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorf9"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_34"
            android:alpha="0.9"
            android:gravity="center_vertical"
            android:text="分公司"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:id="@+id/fen_company_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_below="@id/a"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="#F2F5F6">

            <TextView
                android:id="@+id/fen_company_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/down"
                android:gravity="center"
                android:hint="所有分子公司"
                android:textColor="@color/text_black"
                android:textColorHint="@color/color_66000000"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>


        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fen_company_rl"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_33"
            android:gravity="center_vertical"
            android:text="仓库"
            android:textColor="#000000"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:id="@+id/ck_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_below="@id/b"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="#F2F5F6">

            <TextView
                android:id="@+id/ck_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/down"
                android:gravity="center"
                android:hint="所有仓库"
                android:textColor="@color/text_black"
                android:textColorHint="@color/color_66000000"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <TextView
            android:id="@+id/pz"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ck_rl"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="品种"
            android:textColor="#000000"
            android:textSize="@dimen/sp_14" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_below="@id/pz"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>